{
	"name": "GitHidder",
	"displayName": "GitHidder",
	"description": "Highlighting keywords in the color you want.",
	"version": "1.1.5",
	"publisher": "KonstantinosKol",
	"engines": {
		"vscode": "^1.36.0"
	},
	"license": "SEE LICENSE IN LICENSE.txt",
	"repository": {
		"type": "git",
		"url": "https://github.com/KonstantinosKol/GitHidder"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"marker",
		"linemarker",
		"Git",
		"hide",
		"git",
		"password",
		"hidder"
	],
	"icon": "Logo-1.png",
	"activationEvents": [
		"*"
	],
	"main": "./out/src/extension",
	"contributes": {
		"commands": [
			{
				"command": "GitHidder.AddKeyword_Manually",
				"title": "Add New Keyword"
			},
			{
				"command": "GitHidder.Reveal_All",
				"title": "Reveal All"
			},
			{
				"command": "GitHidder.OpenFile",
				"title": "Open File",
				"icon": {
					"dark": "resources/OpenFileIconLight.svg",
					"light": "resources/OpenFileIconDark.svg"
				}
			},
			{
				"command": "GitHidder.AddKeyword",
				"title": "Add new password",
				"icon": {
					"dark": "resources/dark/plus.svg",
					"light": "resources/light/plus.svg"
				}
			},
			{
				"command": "GitHidder.DeleteKeyword",
				"title": "Delete keyword",
				"icon": {
					"dark": "resources/dark/cross.svg",
					"light": "resources/light/cross.svg"
				}
			},
			{
				"command": "GitHidder.DeletePath",
				"title": "Reveal all those keyword",
				"icon": {
					"dark": "resources/dark/cross.svg",
					"light": "resources/light/cross.svg"
				}
			},
			{
				"command": "GitHidder.ChangeColor",
				"title": "Change color"
			},
			{
				"command": "GitHidder.AddSelection",
				"title": "Hide/Reveal this text"
			},
			{
				"command": "GitHidder.EditKeyword",
				"title": "Edit",
				"icon": {
					"dark": "resources/Pencil_Light.svg",
					"light": "resources/Pencil_Dark.svg"
				}
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "GitHidder",
					"title": "%GitHidder.title%",
					"icon": "media/Git_Hidder_Logo.svg"
				}
			]
		},
		"views": {
			"GitHidder": [
				{
					"id": "keywordlist",
					"name": "Password List"
				}
			]
		},
		"menus": {
			"view/item/context": [
				{
					"command": "GitHidder.OpenFile",
					"when": "view == keywordlist && viewItem == highlighter",
					"group": "inline"
				},
				{
					"command": "GitHidder.AddKeyword",
					"when": "view == keywordlist && viewItem == highlighter",
					"group": "inline"
				},
				{
					"command": "GitHidder.DeletePath",
					"when": "view == keywordlist && viewItem == highlighter",
					"group": "inline"
				},
				{
					"command": "GitHidder.AddKeyword",
					"when": "view == keywordlist && viewItem == highlighter",
					"group": "highlighter@1"
				},
				{
					"command": "GitHidder.ChangeColor",
					"when": "view == keywordlist && viewItem == highlighter",
					"group": "highlighter@2"
				},
				{
					"command": "GitHidder.DeletePath",
					"when": "view == keywordlist && viewItem == highlighter",
					"group": "highlighter@3"
				},
				{
					"command": "GitHidder.DeleteKeyword",
					"when": "view == keywordlist && viewItem == keyworditem",
					"group": "inline"
				},
				{
					"command": "GitHidder.EditKeyword",
					"when": "view == keywordlist && viewItem == keyworditem",
					"group": "inline"
				}
			],
			"view/title": [
				{
					"command": "GitHidder.AddKeyword_Manually",
					"when": "view == keywordlist",
					"group": "viewtitle@1"
				},
				{
					"command": "GitHidder.Reveal_All",
					"when": "view == keywordlist",
					"group": "viewtitle@2"
				}
			],
			"editor/context": [
				{
					"command": "GitHidder.AddSelection",
					"when": "editorHasSelection && !editorHasMultipleSelections"
				}
			]
		},
		"configuration": [
			{
				"title": "GitHidder",
				"properties": {
					"GitHidder.upperlimit": {
						"type": "integer",
						"default": "100000",
						"description": "The upper limit of highlighting keyword count"
					},
					"GitHidder.savelist": {
						"type": "array",
						"items": {
							"color": {
								"type": "string"
							},
							"keyword": {
								"type": "array",
								"items": {
									"type": "string"
								}
							}
						},
						"description": "%Saved keywords%"
					},
					"GitHidder.brightness.dark": {
						"type": "integer",
						"minimum": "0",
						"maximum": "255",
						"default": "85",
						"description": "Highlighter brightness (Dark theme). 255 is the brightest."
					},
					"GitHidder.brightness.light": {
						"type": "integer",
						"minimum": "0",
						"maximum": "255",
						"default": "85",
						"description": "Highlighter brightness (Light theme). 255 is the brightest."
					},
					"GitHidder.forcevisible": {
						"type": "boolean",
						"default": "true",
						"description": "Force visible a color when the keyword is added"
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"dependencies": {
		"minimist": "^1.2.5",
		"node-async-exec": "^1.2.0"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^8.10.66",
		"minimist": "^1.2.5",
		"tslint": "^5.20.0",
		"typescript": "^2.6.1",
		"vscode": "^1.1.21"
	}
}
